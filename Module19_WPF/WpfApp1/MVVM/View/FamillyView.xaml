                    <GradientStop Color="Orange" Offset="0.0"/>
                    <GradientStop Color="OrangeRed" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.Clip>
                <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,600,30"/>
            </Border.Clip>

            <Grid>
                <StackPanel>
                    <TextBlock  Text="Mobilier"
